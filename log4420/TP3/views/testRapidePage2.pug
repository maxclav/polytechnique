extend questionLayout
block questionForm
  section.sub-container
    h2.sub-container-title Question 2 
      div.sub-title Quelle est la syntaxe pour déclarer l'encodage des caractères du document en UTF-8 ?
    form(action='/resultat')
      div
        label.form-label(for='reponse1')
          input.form-input#reponse1(name='question', type='radio')
          |  meta encoding="text/html; charset=utf-8"
      div
        label.form-label(for='reponse2')
          input.form-input#reponse2(name='question', type='radio')
          |  meta charset="text/html; UTF-8"
      div
        label.form-label(for='reponse3')
          input.form-input#reponse3(name='question', type='radio')
          |  meta charset="utf-8"
      input.default-button.col-m-12.col-12(type='submit' value="Voir les résultats")
